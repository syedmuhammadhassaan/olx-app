<form method="POST" action="/users/prop/submit">

    <div class="form-group">
        <label for="adtitle" class="cols-sm-2 control-label">Ad Title</label>
        <div class="cols-sm-10">
            <div class="input-group-sm">

                <input type="text" class="form-control" name="adtitle" placeholder="Ad Title" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="category" class="cols-sm-2 control-label">Category</label>
        <div class="cols-sm-10">
            <div class="input-group-sm">
                <select name="category" class="form-control">
                    <option value="property">Property</option>
                    <option value="xyz">xyz</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="Ad Description" class="cols-sm-2 control-label">Ad Description</label>
        <div class="cols-sm-10">
            <div class="">
                <textarea name="txtarea" class="form-control" rows="5" placeholder="Ad Description"></textarea>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="file" name="file" id="file" class="=custom-file-input">
        <label for="file" class="custom-file-label">Choose File</label>
        <div class="cols-sm-10">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </div>

    <div class="form-group">
        <label for="name" class="cols-sm-2 control-label">Name</label>
        <div class="cols-sm-10">
            <div class="">
                <input type="text" class="form-control" name="name1" placeholder="Name" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="cell" class="cols-sm-2 control-label">Cell No</label>
        <div class="cols-sm-10">
            <div class="">
                <input type="number" class="form-control" name="cell" placeholder="cell" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="province" class="cols-sm-2 control-label">province</label>
        <div class="cols-sm-10">
            <div class="">
                <input type="text" class="form-control" name="province" placeholder="province" />
            </div>
        </div>
    </div>

    <div class="form-group ">
        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Submit</button>
    </div>

</form>